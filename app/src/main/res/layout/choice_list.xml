<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choiceWc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_wc_24"
        android:background="@drawable/bg_choice_select"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choiceMv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_movie_24"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choiceTaxi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_local_taxi_24"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choiceSubway"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_subway_24"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choiceParking"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_local_parking_24"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choiceEv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_ev_station_24"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choiceGas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_local_gas_station_24"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/choicePark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_park_24"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:layout_margin="8dp"
        />

</LinearLayout>